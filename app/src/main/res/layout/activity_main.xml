<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_primary_variant"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Bilangan 1 :"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bil1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Bilangan 2 :"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mul"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Hasil:"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mul"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/text3"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/bil1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:backgroundTint="@color/purple_700"
        android:hint="Bilangan 1"
        android:inputType="number"
        android:textColorHint="#473F3F" />

    <EditText
        android:id="@+id/bil2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:backgroundTint="@color/purple_700"
        android:hint="Bilangan 2"
        android:inputType="number"
        android:textColorHint="#473F3F" />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bil2"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0DE315"
        android:textColor="@color/white"
        android:text="Tambah" />

    <Button
        android:id="@+id/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bil2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/add"
        android:backgroundTint="#0DE315"
        android:textColor="@color/white"
        android:text="Kurang" />

    <Button
        android:id="@+id/mul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0DE315"
        android:text="Kali"
        android:textColor="@color/white" />


    <Button
        android:id="@+id/div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sub"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/mul"
        android:backgroundTint="#0DE315"
        android:text="Bagi"
        android:textColor="@color/white" />

</RelativeLayout>